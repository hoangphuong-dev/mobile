<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    <ImageButton
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:scaleType="fitXY"
        android:id="@+id/image_view_background_playlist"
        android:layout_height="110dp">
    </ImageButton>
    
    <View
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:background="@drawable/custom_background_banner"
        android:layout_height="110dp">
    </View>
    <ImageView
        android:id="@+id/image_view_playlist"
        android:layout_width="50dp"
        android:elevation="6dp"
        android:layout_marginLeft="15dp"
        android:layout_marginBottom="10dp"
        android:layout_alignBottom="@+id/image_view_background_playlist"
        android:layout_height="50dp">
    </ImageView>
    <TextView
        android:layout_alignBottom="@+id/image_view_playlist"
        android:textSize="13sp"
        android:text="Những bai hit của"
        android:textStyle="bold"
        android:layout_marginLeft="13dp"
        android:layout_toRightOf="@+id/image_view_playlist"
        android:layout_width="wrap_content"
        android:ellipsize="end"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="50dp"
        android:maxLines="1"
        android:id="@+id/textview_ten_playlist"
        android:textColor="#ffff"
        android:layout_height="wrap_content">
    </TextView>

</RelativeLayout>